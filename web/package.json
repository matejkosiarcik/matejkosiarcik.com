{
  "private": true,
  "scripts": {
    "build": "run-s clean build:goatcounter build:webpack build:minify-js build:purgecss build:rcs build:minify-css build:svgo build:hash build:sri build:minify-html build:urllist build:minify-xml build:netlify",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode production",
    "build:purgecss": "purgecss --config purgecss.config.js",
    "build:rcs": "node build-rcs.js",
    "build:sri": "gulp sri",
    "build:minify-css": "cmmm public/style.css",
    "build:minify-html": "html-minifier --input-dir public --output-dir public --file-ext html --use-short-doctype --remove-comments --process-conditional-comments --collapse-whitespace --collapse-boolean-attributes --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --sort-class-name --sort-attributes --minify-css true --minify-js true --minify-urls true",
    "build:minify-js": "glob-exec --foreach --parallel \"public/**/*.js\" -- \"terser --config-file terser.json {{file}} --output {{file}}\"",
    "build:minify-xml": "glob-exec --foreach --parallel \"public/**/*.xml\" -- \"minify-xml --in-place {{file}}\"",
    "build:urllist": "sitemap2urllist --file public/sitemap.xml --output public/urllist.txt",
    "build:svgo": "run-s build:svgo:*",
    "build:svgo:1": "svgo --folder public --recursive --precision=1 --multipass --quiet",
    "build:svgo:2": "glob-exec --foreach --parallel \"public/**/*.svg\" -- \"sed \\\"s~<defs/>~~g\\\" <\\\"{{file}}\\\" | tr -d \\\"\\n\\\" | sponge \\\"{{file}}\\\"\"",
    "build:hash": "node build-hash.js",
    "build:netlify": "run-p build:netlify:*",
    "build:netlify:redirects": "cp 'netlify/_redirects' 'public/_redirects'",
    "build:netlify:headers": "node 'netlify/_headers.js'",
    "build:goatcounter": "curl -sSLf 'https://gc.zgo.at/count.js' --output script/goatcounter.js",
    "postbuild": "node postbuild-validate.js",
    "clean": "rimraf public",
    "lint": "run-p lint:*",
    "lint:ts": "tsc --noEmit --skipLibCheck",
    "start": "run-s build:goatcounter serve",
    "serve": "cross-env NODE_ENV=development webpack serve --mode development"
  },
  "dependencies": {
    "core-js": "^3.22.5",
    "hamburgers": "^1.2.1",
    "instant.page": "^5.1.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-numeric-separator": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "autoprefixer": "^10.4.6",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-mini-mini-mini": "^0.2.1",
    "css-validator": "^0.11.0",
    "glob": "^8.0.3",
    "glob-all": "^3.3.0",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-sri-hash": "^2.2.1",
    "hasha": "^5.2.2",
    "html-loader": "^3.1.0",
    "html-minifier": "^4.0.0",
    "html-validator": "^6.0.1",
    "html-webpack-plugin": "^5.5.0",
    "isomorphic-fetch": "^3.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "minify-xml": "^3.3.1",
    "node-sass-glob-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-calc": "^8.2.4",
    "postcss-color-hex-alpha": "^8.0.3",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^12.1.7",
    "postcss-hexrgba": "^2.0.1",
    "postcss-loader": "^6.2.1",
    "postcss-media-minmax": "^5.0.0",
    "posthtml-attrs-sorter": "^1.1.0",
    "posthtml-loader": "^2.0.1",
    "posthtml-outlinks": "^1.0.0",
    "posthtml-transform": "^1.0.10",
    "purgecss": "^4.1.3",
    "rcs-core": "^3.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "sitemap2urllist": "^0.2.1",
    "sponge": "^0.1.0",
    "style-loader": "^3.3.1",
    "svgo": "^2.8.0",
    "terser": "^5.13.1",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-fix-style-only-entries": "^0.6.1"
  }
}
