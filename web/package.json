{
  "private": true,
  "name": "@matejkosiarcik/web",
  "scripts": {
    "build": "run-s clean build:webpack build:purgecss build:rcs build:minify-css build:svgo build:hash build:sri build:minify-html build:sitemap build:netlify",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode production",
    "build:purgecss": "purgecss --config purgecss.config.js",
    "build:rcs": "node build-rcs.js",
    "build:sri": "gulp sri",
    "build:minify-css": "npm run --prefix remynify build",
    "build:minify-html": "html-minifier --input-dir public --output-dir public --file-ext html --use-short-doctype --remove-comments --process-conditional-comments --collapse-whitespace --collapse-boolean-attributes --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --sort-class-name --sort-attributes --minify-css true --minify-js true --minify-urls true",
    "build:sitemap": "run-s build:sitemap:urllist build:sitemap:optimize-*",
    "build:sitemap:urllist": "sitemap2urllist --file public/sitemap.xml --output public/urllist.txt",
    "build:sitemap:optimize-1": "sed -E 's~^ +~~' <public/sitemap.xml | tr -d '\n' >public/sitemap-tmp.xml",
    "build:sitemap:optimize-2": "mv public/sitemap-tmp.xml public/sitemap.xml",
    "build:svgo": "run-s build:svgo:*",
    "build:svgo:1": "svgo --folder public --recursive --precision=1 --multipass --quiet",
    "build:svgo:2": "find public -type f -iname '*.svg' -print0 | xargs -0 -n1 sh -c 'sed \"s~<defs/>~~g\" <\"${1}\" | tr -d \"\\n\" >\"${1}.tmp\" && mv \"${1}.tmp\" \"${1}\"' -",
    "build:hash": "node build-hash.js",
    "build:netlify": "run-p build:netlify:*",
    "build:netlify:redirects": "cp 'netlify/_redirects' 'public/_redirects'",
    "build:netlify:headers": "node 'netlify/_headers.js'",
    "prebuild": "run-s prebuild:goat",
    "prebuild:goat": "node build-goatcounter.js",
    "postbuild": "node build-validate.js",
    "clean": "rimraf public",
    "lint": "run-p lint:*",
    "lint:ts": "tsc --noEmit --skipLibCheck",
    "start": "run-p prebuild serve",
    "serve": "cross-env NODE_ENV=development webpack serve --mode development"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "colorette": "1.2.2",
    "core-js": "^3.10.1",
    "hamburgers": "^1.1.3",
    "instant.page": "^5.1.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-numeric-separator": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "concat": "^1.0.3",
    "copy-webpack-plugin": "^8.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.0",
    "css-validator": "^0.10.0",
    "csslint": "^1.0.5",
    "execa": "^5.0.0",
    "glob": "^7.1.6",
    "glob-all": "^3.2.1",
    "gulp": "^4.0.2",
    "gulp-sri-hash": "^2.2.1",
    "hasha": "^5.2.2",
    "html-loader": "^2.1.2",
    "html-minifier": "^4.0.0",
    "html-validator": "^5.1.17",
    "html-webpack-plugin": "^5.3.1",
    "isomorphic-fetch": "^3.0.0",
    "jshint": "^2.12.0",
    "mini-css-extract-plugin": "^1.4.1",
    "node-sass-glob-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.9",
    "postcss-calc": "^8.0.0",
    "postcss-color-hex-alpha": "^7.0.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-functions": "^4.0.2",
    "postcss-hexrgba": "^2.0.1",
    "postcss-loader": "^5.2.0",
    "postcss-media-minmax": "^5.0.0",
    "posthtml-attrs-sorter": "^1.1.0",
    "posthtml-loader": "^2.0.1",
    "posthtml-outlinks": "^1.0.0",
    "posthtml-transform": "^1.0.10",
    "purgecss": "^4.0.3",
    "rcs-core": "^3.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "sitemap2urllist": "^0.2.1",
    "style-loader": "^2.0.0",
    "svgo": "^2.3.0",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.31.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-fix-style-only-entries": "^0.6.1"
  }
}
