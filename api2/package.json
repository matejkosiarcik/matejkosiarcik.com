{
  "private": true,
  "main": "build/index.js",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "run-p lint:*",
    "lint:es": "eslint . || true",
    "lint:ts": "tslint --project tsconfig.json",
    "prebuild": "mkdirp public",
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "firebase emulators:start --only functions,database,hosting",
    "prestart": "run-s build",
    "start": "run-p watch serve",
    "deploy": "firebase deploy --only functions,database,hosting"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^9.3.0",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^8.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "firebase-functions-test": "^0.2.3",
    "npm-run-all": "^4.1.5",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
